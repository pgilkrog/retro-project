{
  "$schema": "https://json.schemastore.org/prettierrc",
  "tailwindConfig": "./tailwind.base.config.ts",
  "semi": false,
  "tabWidth": 2,
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "es5",
  "useTabs": false,
  "bracketSpacing": true,
  "singleAttributePerLine": true,
  "overrides": [
    {
      "files": "*.vue",
      "options": {
        "htmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}
